<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:id="@+id/bubble"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
        android:layout_width="62dp"
        android:layout_height="73dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
            android:src="@drawable/pic1"
            android:layout_weight="0.73"
            android:id="@+id/pic" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:weightSum="1">
        <TextView
            android:id="@+id/mapoverlayusername"
            android:text="Boris"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingTop="15px"
            android:layout_weight="0.30" />

            <ImageView
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/s3star"
                android:visibility="visible"
                android:adjustViewBounds="true"
                android:paddingTop="5px"
                android:layout_weight="0.66"
                android:scaleType="centerInside" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="$50"
            android:id="@+id/mapoverlayamount"
            android:textColor="#ff7ee19c"
            android:paddingTop="5dp"
            android:layout_weight="2.27"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="31dp" >

        <TextView
            android:id="@+id/mapoverlaydescription"
            android:text="Need 10 liters of fuel! "
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Give it to Boris!"
            android:id="@+id/mapoverlaybutton"
            android:background="#ff7ee19c"
            android:clickable="true"
            android:enabled="true"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout >

</LinearLayout>